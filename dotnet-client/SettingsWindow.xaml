<Window x:Class="DigitlexViewer.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="הגדרות" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner">
  <Grid Margin="16">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto"/>
      <ColumnDefinition Width="300"/>
    </Grid.ColumnDefinitions>

    <TextBlock Text="Server URL:" Margin="0,0,8,8"/>
    <TextBox x:Name="ServerUrlBox" Grid.Column="1" Margin="0,0,0,8"/>

    <TextBlock Text="Screen ID:" Grid.Row="1" Margin="0,0,8,8"/>
    <TextBox x:Name="ScreenIdBox" Grid.Row="1" Grid.Column="1" Margin="0,0,0,8"/>

    <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
      <Button Content="שמירה" Width="80" Margin="4" IsDefault="True" Click="Save_Click"/>
      <Button Content="ביטול" Width="80" Margin="4" IsCancel="True"/>
    </StackPanel>
  </Grid>
</Window>

